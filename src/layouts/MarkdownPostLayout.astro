---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout>
  <main class="pt-8 pb-16 lg:pt-10 lg:pb-24 bg-gray-900 antialiased">
    <article class="mx-auto w-full max-w-2xl">
      <header class="mb-4 lg:mb-6">
        <h1
          class="mb-4 text-3xl font-extrabold leading-tight lg:mb-6 lg:text-4xl text-white"
        >
          {frontmatter.title}
        </h1>
        <address class="flex items-center mb-6">
          <div class="inline-flex items-center mr-3 text-sm text-white">
            <img
              class="mr-4 w-16 h-16 rounded-full"
              src="https://flowbite.com/docs/images/people/profile-picture-2.jpg"
              alt="Jese Leos"
            />
            <div>
              <a href="#" rel="author" class="text-xl font-bold text-white"
                >{frontmatter.author}</a
              >
            </div>
          </div>
        </address>
      </header>
      <slot />
    </article>
  </main>
</Layout>

