---
const { title, url, description, author } = Astro.props;
---

<section class="bg-gray-900  p-7">
  <article
    class="p-5 rounded-lg border shadow-md bg-gray-800 border-gray-700 min-w-[400px] min-h-[300px] flex flex-col justify-center items-center "
  >
    <h2 class="mb-2 text-2xl font-bold tracking-tight text-white">
      <a href={url}>{title}</a>
    </h2>
    <p>escrito por: {author}</p>
    <p class="mb-5 font-light text-gray-400">
      {description}
    </p>
    <div class="flex justify-between items-center">
      <a
        href={url}
        class="inline-flex items-center font-medium hover:underline"
      >
        Leer completo
        <svg
          class="ml-2 w-4 h-4"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path></svg
        >
      </a>
    </div>
  </article>
</section>
