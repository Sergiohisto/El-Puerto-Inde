---
interface Props {
  class?: string;
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<article
  class={`
${Astro.props.class}
col-span-5
  relative rounded-xl
  backdrop-blur-md
  border border-black/10
  shadow-inner shadow-white/30
  overflow-hidden
  group
`}
>
  <slot name="image" />
  <div
    class="relative z-20 flex h-full select-none flex-col justify-end gap-1 p-4 text-lg md:p-6"
  >
    <h2 class="text-2xl font-bold text-balance mb-4">{title}</h2>
    {
      subtitle && (
        <h3 class="text-xl font-semibold text-sky-200/80 -mt-4">{subtitle}</h3>
      )
    }
    <slot name="content" />
  </div>
</article>
