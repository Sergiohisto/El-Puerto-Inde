---
import Layout from "../layouts/Layout.astro";
import AuthorItemsErnesto from "../components/autores/AuthorItemsErnesto.astro";
import AuthorItemsSergioDev from "../components/autores/AutthorItemsSergioDev.astro";

const pageTitle = "Autores";
---

<Layout pageTitle={pageTitle}>
  <section class="bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-lg text-center lg:py-16 lg:px-6">
      <div class="mx-auto mb-8 max-w-screen-sm lg:mb-16">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-white">
          Nuestro Equipo.
        </h2>
        <p class="font-light sm:text-xl text-gray-400">
          Explore los diferentes articulos y notas de nuestros autores.
        </p>
        <p>
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Minima quos
          vel ipsa. Doloribus dolorum voluptatum repellendus laudantium, animi
          beatae natus et nihil cupiditate eius commodi neque quos
          reprehenderit, laborum architecto?
        </p>
      </div>
      <div
        class="grid gap-8 lg:gap-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      >
        <AuthorItemsSergioDev />
        <AuthorItemsErnesto />
      </div>
    </div>
  </section>
</Layout>
